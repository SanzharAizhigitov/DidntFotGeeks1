<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreatorFragment"
    android:padding="16dp"
    android:background="@color/background">


    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создатель этой великолепной игры: Айжигитов Санжар" />

    <Button
        android:id="@+id/no_btn"
        android:layout_marginVertical="12dp"
        android:backgroundTint="@color/dark_grass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:text="Нет, это я разработчик!"
        />
    <Button
        android:id="@+id/yes_btn"
        android:layout_marginVertical="12dp"
        android:backgroundTint="@color/dark_grass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:text="Ладно, это не я разработчик"
        />
    <Button
        android:id="@+id/home_btn"
        android:layout_gravity="center"
        android:layout_marginVertical="12dp"
        android:backgroundTint="@color/dark_grass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="ДОМОЙ"
        />
</LinearLayout>